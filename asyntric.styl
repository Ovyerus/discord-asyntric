/* Status Popout */
.theme-dark .status-picker {
    border-radius: 50px;
    background: $col1;
    width: 38px;
    left: -50px;
    & .popout-menu-separator {
        display: none;
    }
    & .popout-menu-item {
        & .helper,
        & .status-icon-text .status-text {
            display: none;
        }
    }
}